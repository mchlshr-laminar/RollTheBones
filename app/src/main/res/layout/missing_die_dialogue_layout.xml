<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/missingDialogueMessage2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="Missing Error Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/missing_die_dialogue_options_description"
        app:layout_constraintEnd_toEndOf="@+id/missingDialogueMessage2"
        app:layout_constraintStart_toStartOf="@+id/missingDialogueMessage2"
        app:layout_constraintTop_toBottomOf="@+id/missingDialogueMessage2" />

    <TextView
        android:id="@+id/missingDialogueReplaceWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/missing_die_dialogue_replacement_selection_header"
        app:layout_constraintStart_toStartOf="@+id/missingDialogueMessage2"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Spinner
        android:id="@+id/missingDialogueDieSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/missingDialogueReplaceWith"
        app:layout_constraintStart_toEndOf="@+id/missingDialogueReplaceWith"
        app:layout_constraintTop_toTopOf="@+id/missingDialogueReplaceWith" />

</androidx.constraintlayout.widget.ConstraintLayout>